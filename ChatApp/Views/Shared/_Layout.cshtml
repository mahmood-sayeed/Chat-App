
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ChatApp</title>

    <link href="~/css/site.css" rel="stylesheet" />

</head>
<body>
    <div class=navbar>
        <a asp-controller="Home" asp-action="Index">Home</a>
        <a asp-controller="Home" asp-action="Find">Find</a>
        <a asp-controller="Home" asp-action="Private">Private</a>
        <a asp-controller="Account" asp-action="Logout">Logout</a>

        @*@Html.DropDownList("SLanguage",
        new SelectList(Enum.GetValues(typeof(Transslate.Language)), Enum.GetValues(typeof(Transslate.Language)).ToString(), Enum.GetValues(typeof(Transslate.LanguageText)).ToString(), "Select Language"));*@


        @{
            List<SelectListItem> listItems = new List<SelectListItem>();
            listItems.Add(new SelectListItem
            {
                Text = "english",
                Value = "en"
            });
            listItems.Add(new SelectListItem
            {
                Text = "swedish",
                Value = "sv",
                Selected = true
            });
        }
    
        @Html.DropDownList("langs", listItems)
   
    </div>
    <div class="main">
        @if (User.Identity.IsAuthenticated)
        {
            <vc:room></vc:room>
        }

        <div class="chat">
            @RenderBody()
        </div>
    </div>
    <div class="modal" id="create-room-modal">
        <form asp-controller="Home" asp-action="CreateRoom" class="modal-body">
            <button type="button" class="close" onclick="closeModal()">x</button>
            <header>Create Room</header>
            <div>
                <input name="name">
            </div>
            <footer>
                <button>Create</button>
            </footer>
        </form>
    </div>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>
